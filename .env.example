# Supabase Configuration (Production/Cloud mode)
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Local API Configuration (Development mode)
# Uncomment the line below to use local PostgreSQL API instead of Supabase
# VITE_API_BASE_URL=http://localhost:8080

# LLM Configuration
# Google Gemini API (for cloud-based chat)
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# Local LLM Configuration (for private, local inference)
# Set to "true" to use local Ollama instead of Google Gemini
VITE_USE_LOCAL_LLM=false
VITE_OLLAMA_URL=http://localhost:11434

# Backend Environment Variables (for server/ directory)
# DATABASE_URL=postgresql://username:password@localhost:5432/fortaivo
# JWT_SECRET=your_jwt_secret_here
# CORS_ORIGIN=http://localhost:5173,http://127.0.0.1:5173
# PORT=8080